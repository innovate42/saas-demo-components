    {
      "id": "imageFit",
      "label": "Image shape",
      "type": "picklist",
      "options": [
        {
          "id": "cover",
          "label": "Cover",
          "value": "cover"
        },
        {
          "id": "contain",
          "label": "Contain",
          "value": "contain"
        },
        {
          "id": "scale-down",
          "label": "Scale down",
          "value": "scale-down"
        },
        {
          "id": "right",
          "label": "Right",
          "value": "right"
        },
        {
          "id": "top",
          "label": "Top",
          "value": "top"
        }
      ],
      "default": "cover"
    },
    {
      "id": "componentId",
      "label": "Component Id",
      "type": "string",
      "default": "globe-b2b-offer-cards"
    },
    {
      "id": "analyticsIdentifier",
      "label": "Analytics Identifier",
      "type": "string",
      "default": "globe-b2b-offer-cards"
    }
  ]
