  },
  "peerDependencies": {
    "@sentry/browser": "*",
    "i18next": "*",
    "react": "*",
    "react-dom": "*",
    "react-redux": "*",
    "redux": "*"
  },
  "limioProps": [
    {
      "id": "offerWidth",
      "label": "Card width",
      "type": "number",
      "default": 3.5
    },
    {
      "id": "offerOverflowLayout",
      "label": "Card alignment",
      "type": "picklist",
      "options": [
        {
          "id": "stretch",
          "label": "Stretch",
          "value": "stretch"
        },
        {
          "id": "center",
          "label": "Center",
          "value": "center"
        },
        {
          "id": "start",
          "label": "Start",
          "value": "start"
        },
        {
          "id": "end",
          "label": "End",
          "value": "end"
        }
      ],
      "default": "stretch"
    },
    {
      "id": "includedFeaturesTitle",
      "label": "Features Title",
      "type": "string",
      "default": "Learn more"
    },
    {
      "id": "ineligibleMessage",
      "label": "Ineligible for trial message",
      "type": "string",
      "default": "You are not eligible for a trial offer. Please select a different offer to continue."
    },
    {
      "id": "showOfferImages",
      "label": "Show images for offers?",
      "type": "boolean",
      "default": false
    },
    {
      "id": "maxCards",
      "label": "Max number of offer cards per row (leave blank if no limit)",
      "type": "number",
      "default": 0
    },
    {
      "id": "alwaysMinimise",
      "label": "Always minimise features?",
      "type": "boolean",
      "default": false
    },
    {
      "id": "header",
      "label": "Header",
